  ErrorCodeType = {{title}}ErrorCode,
> extends Error {
  constructor(
    public readonly message: string,
    public readonly code: ErrorCodeType,
    public readonly data: unknown
  ) {
    super(message);
    Object.setPrototypeOf(this, Error.prototype);
    this.name = "RpcError";
  }
}

